<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <nav>
      <%- include ('../partials/nav.ejs') %>
    </nav>
    <br>
    <br>
    <br>
    <div class="container">


    <form  action="/logs/<%=log.id%>?_method=PUT" method="POST">
      <div class="input-field">
        <input type="number" id="glycemia" value="<%=log.glycemia %>" name="glycemia" class="validate"> mg/dl
        <label for="glycemia">glycemia</label>
      </div> <br>
      <div class="input-field">
        <input type="number" id="bp" value="<%=log.bp %>" name=bp class="validate" > mmHg
        <label for="bp">blood pressure</label>
      </div><br>
      <div class="input-field">
        <input type="number"id="weight" value="<%=log.weight %>" name="weight" class="validate"> lb
        <label for="weight">weight</label>
      </div><br>
      <div class="input-field">
        <input type="text" id="insulin" name="insulin" value="<%=log.insulin %>" class="validate">
        <label for="insulin">insulin</label>
      </div><br>
      <div class="input-field">
        <input type="number" id="units" name="units" value="<%=log.units %>" class="validate">
        <label for="units">units</label>
      </div><br>
      <div class="input-field">
        <input type="date" id="date" name="date" class="validate">
        <label for="date">date</label>
      </div>
      <input type="hidden" name="user" value=" <%=JSON.stringify(currentUser)%>">
      <br>
      <input type="submit"  value="submit changes" class="btn-small red">
      <br>
    </form>
    </div>
    <br>
    <br>
    <br>
    <br>
    <%- include ('../partials/footer.ejs') %>
  </body>
</html>
